[user]
  name = Rob Romito
  email = rob@robertromito.com

[core]
  autocrlf = input

[push]
  default = simple

[alias]
  co = checkout
  ci = commit
  s = status -s
  br = branch
  lg = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p

[includeIf "gitdir/i:c:/"]
  path = .gitconfig-windows

[includeIf "gitdir/i:d:/"]
  path = .gitconfig-windows

[includeIf "gitdir/i:/users/rob/src/"]
  path = .gitconfig-macos

[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[winUpdater]
	recentlySeenVersion = 2.21.0.windows.1
